{
  "name": "kevinselwyn.com",
  "version": "1.0.0",
  "description": "Personal website that builds/deploys to kevinselwyn.github.io",
  "main": "index.js",
  "repository": "https://github.com/kevinselwyn/kevinselwyn.com",
  "author": "Kevin Selwyn <kevinselwyn@gmail.com>",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "dev": "hugo serve --buildDrafts --port 1234",
    "serve": "cd public && python -m SimpleHTTPServer 1234",
    "build": "yarn run build:hugo && yarn run build:html && yarn run build:xml",
    "build:hugo": "hugo",
    "build:html": "find public -name '*.html' -exec html-minifier --collapse-whitespace --minify-css inline {} --output {} \\;",
    "build:xml": "find public -name '*.xml' -exec html-minifier --collapse-whitespace --minify-css inline {} --output {} \\;",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "html-minifier": "^3.5.21"
  }
}
